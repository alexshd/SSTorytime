{{/* Details panel for a single sentence annotation */}}
<div class="space-y-3">
    <div class="text-sm">
        <div class="text-gray-700"><span class="font-mono text-xs text-gray-500 mr-2">@sen{{.Index}}</span>{{.Text}}
        </div>
    </div>
    <div class="bg-white border border-gray-200 rounded p-3">
        <div class="text-xs text-gray-500 mb-2">Extract</div>
        {{if .ExtractFrom}}
        <div class="px-2 py-1 rounded bg-blue-50 border border-blue-200 text-sm">" (extract/quote from) {{.ExtractFrom}}
        </div>
        {{else}}
        <div class="text-gray-400 text-sm">No extract/quote line generated.</div>
        {{end}}
    </div>
    <div class="bg-white border border-gray-200 rounded p-3">
        <div class="text-xs text-gray-500 mb-2">Appears close to</div>
        {{if .AppearsCloseTo}}
        <ul class="list-disc list-inside space-y-1">
            {{range .AppearsCloseTo}}
            <li>" (appears close to) {{.}}</li>
            {{end}}
        </ul>
        {{else}}
        <div class="text-gray-400 text-sm">No context keywords.</div>
        {{end}}
    </div>
    {{if .NeedsAttention}}
    <div class="bg-yellow-50 border border-yellow-200 rounded p-2 text-yellow-800 text-sm">
        This sentence may need attention based on heuristic rules.
    </div>
    {{end}}
</div>