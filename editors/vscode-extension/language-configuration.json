{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    [":", ":"],
    ["::", "::"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "::", "close": "::" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["::", "::"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*::",
      "end": "^\\s*::"
    }
  },
  "wordPattern": "[a-zA-Z_$%*=][a-zA-Z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*::.*::$|^\\s*-.*$",
    "decreaseIndentPattern": "^\\s*-::"
  }
}
