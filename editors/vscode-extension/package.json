{
  "name": "n4l-language-support",
  "displayName": "N4L & SST Language Support",
  "description": "Syntax highlighting and language support for N4L (Notes for Learning) and SST config files",
  "version": "1.0.4",
  "publisher": "local",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "n4l",
        "aliases": [
          "N4L",
          "Notes for Learning"
        ],
        "extensions": [
          ".n4l"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "sst",
        "aliases": [
          "SST",
          "SST Config"
        ],
        "extensions": [
          ".sst"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "n4l",
        "scopeName": "source.n4l",
        "path": "./syntaxes/n4l.tmLanguage.json"
      },
      {
        "language": "sst",
        "scopeName": "source.sst",
        "path": "./syntaxes/sst.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "n4l",
        "path": "./snippets/n4l.json"
      },
      {
        "language": "sst",
        "path": "./snippets/sst.json"
      }
    ]
  },
  "main": "./extension.js",
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
