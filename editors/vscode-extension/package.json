{
  "name": "n4l-language-support",
  "displayName": "N4L & SST Language Support",
  "description": "Syntax highlighting and language support for N4L (Notes for Learning) and SST config files with interactive arrow validation",
  "version": "1.1.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "n4l",
        "aliases": [
          "N4L",
          "Notes for Learning"
        ],
        "extensions": [
          ".n4l"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "sst",
        "aliases": [
          "SST",
          "SST Config"
        ],
        "extensions": [
          ".sst"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "n4l",
        "scopeName": "source.n4l",
        "path": "./syntaxes/n4l.tmLanguage.json"
      },
      {
        "language": "sst",
        "scopeName": "source.sst",
        "path": "./syntaxes/sst.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "n4l",
        "path": "./snippets/n4l.json"
      },
      {
        "language": "sst",
        "path": "./snippets/sst.json"
      }
    ],
    "commands": [
      {
        "command": "n4l.validateArrows",
        "title": "Validate N4L Arrows",
        "category": "N4L"
      },
      {
        "command": "n4l.showArrowList",
        "title": "Show Arrow Tokens (by Category)",
        "category": "N4L"
      },
      {
        "command": "n4l.reloadArrows",
        "title": "Reload Arrow Definitions",
        "category": "N4L"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == n4l || resourceLangId == sst",
          "command": "n4l.validateArrows",
          "group": "n4l"
        },
        {
          "when": "resourceLangId == n4l || resourceLangId == sst",
          "command": "n4l.showArrowList",
          "group": "n4l@1"
        },
        {
          "when": "resourceLangId == n4l || resourceLangId == sst",
          "command": "n4l.reloadArrows",
          "group": "n4l@2"
        }
      ]
    }
  },
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:n4l",
    "onLanguage:sst"
  ],
  "scripts": {
    "package": "echo 'Nothing to build (plain JS extension)'"
  }
}
